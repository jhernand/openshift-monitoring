FROM centos:7

# Create the monitoring user. The unusually high UID is needed because
# recent versions of Kubernetes don't allow lower UID numbers.
RUN \
useradd -l -u 1000000000 -M monitoring

# Install the alert publisher binary:
COPY alert-publisher /tmp
RUN \
cd tmp && \
install -o root -g root -m u+rwx,g+rx,o+rx alert-publisher /usr/bin && \
rm -rf /tmp/*

# Install the alert publisher configuration:
RUN \
cd tmp && \
install -o monitoring -g monitoring -m u+rwx,g+rx,o+rx -d /var/lib/monitoring && \
rm -rf /tmp/*

EXPOSE 9099
USER monitoring
WORKDIR /var/lib/monitoring
CMD ["/usr/bin/alert-publisher", "-alsologtostderr"]
